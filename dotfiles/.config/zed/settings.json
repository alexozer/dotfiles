// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "theme": "Catbox",
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2"
  },
  // "buffer_font_family": "Departure Mono",
  "buffer_font_family": "CommitMonoLigatures",
  // "buffer_font_family": "Berkeley Mono Trial",
  // "buffer_font_family": "CommitMono",
  // "buffer_font_family": "Zed Sans",
  // "buffer_font_family": "Fira Code",
  // "buffer_font_weight": 400,
  "preferred_line_length": 100,
  "vim_mode": true,
  "ui_font_size": 13,
  "buffer_font_size": 10,
  "autosave": "on_focus_change",
  "languages": { "Markdown": { "soft_wrap": "editor_width" } },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy" // rust-analyzer.check.command (default: "check")
        }
      }
    }
  }
}
